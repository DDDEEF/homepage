<p>記事一覧(カテゴリでソート)</p>
<table border="1">
  <tr>
    <th align="left">カテゴリー</th>
    <th align="left">更新日時</th>
    <th align="left">タイトル</th>
    <th align="left">リンク</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.category %></td>
    <td><%= article.created_at.strftime('%Y年%-m月%-d日 %-H時%-M分%-S秒') %></td>
    <td><%= article.title %></td>
    <td><%= link_to '詳細', "/articles/#{article.id}" %></td>
  </tr>
<% end %>
</table>

